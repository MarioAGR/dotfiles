# Some configurations were grabbed from:
# https://jvns.ca/blog/2024/02/16/popular-git-config-options/#core-excludesfile-a-global-gitignore

[init]
	defaultBranch = main

[commit]
	verbose = true

[help]
	autoCorrect = prompt

[log]
	date = iso

[push]
	autoSetupRemote = true

[core]
	editor = nvim
	# excludesfile = ~/.gitignore
	# Set a global gitignore file that applies to all repositories,
	# for things like .idea or .DS_Store
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
	line-numbers = true
	navigate = true    # use n and N to move between diff sections
	true-color = always
	side-by-side = true

[merge]
	conflictstyle = zdiff3

[diff]
	algorithm = histogram
	colorMoved = default

[branch]
	sort = -committerdate

[transfer]
	fsckObjects = true

[fetch]
	fsckObjects = true

[receive]
	fsckObjects = true

[credential]
	helper = /mnt/d/Program\\ Files/Git/mingw64/bin/git-credential-manager.exe #WSL

